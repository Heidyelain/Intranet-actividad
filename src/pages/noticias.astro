---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import NewsCard from "../components/NewsCard.astro";
import Newsfeatured from "../components/Newsfeatured.astro";

---

<Layout>
  <Navbar />
  
  

  <section class="py-16">
